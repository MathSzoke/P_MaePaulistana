@page "/atention"
@model MaePaulistana.Pages.Atention.AtentionModel
@{
}

<link rel="stylesheet" href="~/css/monitoring.css" asp-append-version="true" />

<div class="container-tables">
    <table>
        <caption class="header-tables"><h3 class="unselectable">Atenção</h3></caption>
        <thead>
            <tr>
                <th class="empty-square"></th>
                <th>Data agendada</th>
                <th>Gestante/Puérpera</th>
                <th>CNS</th>
                <th>Unidade de acompanhamento</th>
                <th>Tipo de atendimento</th>
                <th>Previsão Parto</th>
                <th>Última Ligação</th>
                <th>Enfermeira responsável</th>
            </tr>
        </thead>
        <tbody id="table">
            @if (Model.DataAtention != null)
            {
                @foreach (var item in Model.DataAtention!)
                {
                    <tr>
                        <td>
                            <div class="details-patient">
                                <div class="area-eye">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                                        <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z" />
                                        <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z" />
                                    </svg>
                                </div>
                                <div class="area-telephone">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-telephone-fill" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M1.885.511a1.745 1.745 0 0 1 2.61.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z" />
                                    </svg>
                                </div>
                            </div>
                        </td>
                        <td>@item.PacienteNome</td>
                        <td>@item.PacienteDataNascimento</td>
                        <td>@item.PacienteObservacoes</td>
                        <td>@item.PacienteCNS</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>